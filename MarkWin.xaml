<Window x:Class="SchoolDB.MarkWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolDB"
        mc:Ignorable="d"
        Title="MarkWin" Height="450" Width="800"
        Background="Gray">
    <Grid>
        <StackPanel>
        <DataGrid Name="BaseGrid" PreviewKeyDown="BaseGrid_PreviewKeyDown" VerticalAlignment="Top"/>
            <CheckBox Content="Update" Name="UDTCB" Checked="UDTCB_Checked" Unchecked="UDTCB_Unchecked"></CheckBox>
            <DockPanel>
                <TextBox IsEnabled="False" HorizontalAlignment="Left" Margin="0,0,10,0" Name="ID">Id</TextBox>
                <TextBox Name="MarkTB" HorizontalAlignment="Left">Mark</TextBox>
                <TextBox Name="DateOfMarkTB" HorizontalAlignment="Left" Margin="10,0,10,0">Date of mark</TextBox>
                <TextBox Name="RCFK2TB" HorizontalAlignment="Left">Report card (optional)</TextBox>
                <Button Name="Commit" Click="Commit_Click" HorizontalAlignment="Left" Margin="10,0,10,0"> Commit</Button>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
